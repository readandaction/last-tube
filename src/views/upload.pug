extends layouts/main

block content 

    .form-container
        .recorder-container#jsRecorderContainer
            video#jsVideoPreview
            button#jsRecorderBtn Start Recording
        form(action=`/videos${routes.upload}`, method="post", enctype="multipart/form-data")
            .fileUpload
                label(for="file") Video File
                input(type="file", id="file", name="videoFile", required=true, accept="video/*")
            input(type="text", name="title", placeholder="Title", required=true)
            textarea(type="text", name="description", placeholder="description", required=true)
            input(type="submit",value="Upload")
